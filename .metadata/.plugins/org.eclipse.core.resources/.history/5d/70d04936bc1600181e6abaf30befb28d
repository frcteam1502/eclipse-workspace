    public void highScale() {
    	maxArm();
    	maxWristExtension();
    	switchThrow();
    }
    
    public void midScaleThrow() {
    	throwCube(-0.75, 500);
    }
    
    public void lowScale() {
    	
    }
    
    public void midScale() {
    	maxArm();
	    midScaleThrow();
    }
    
    public double deadZone(double i) {
        if (Math.abs(i) < DEADZONE) {
            i = 0.0;
        }
        return i;
    }
}
