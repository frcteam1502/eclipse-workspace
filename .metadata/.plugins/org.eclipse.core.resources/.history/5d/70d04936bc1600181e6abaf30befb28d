    public void teleopInit() {
    	isTeleop = true;
    	//leftWheel.configOpenloopRamp(.15, 10);
    	//rightWheel.configOpenloopRamp(.15, 10);
    	//omniWheels.configOpenloopRamp(.1, 10);
